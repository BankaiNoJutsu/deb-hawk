<% flash.each do |flash_type, message| %>
  <div class="flash-<%= flash_type %>"><%=h message %></div>
<% end %>
<div id="login-form">
  <% form_tag(:action => 'create') do %>
    <table>
      <tr>
        <td><label for="username"><%= _('Username:') %></label></td>
        <td><%= text_field_tag 'username', params[:username], :class => 'loginfield' %></td>
      </tr>
      <tr>
        <td><label for="password"><%= _('Password:') %></label></td>
        <td><%= password_field_tag 'password', nil, :class => 'loginfield' %></td>
      </tr>
      <tr>
        <td colspan="2" style="text-align: right;"><%= submit_tag(_('Log In')) %></td>
      </tr>
    </table>
  <% end %>
  <script type="text/javascript"><!--
    if ($('username').value == '') $('username').focus();
    else if ($('password').value == '') $('password').focus();
  //--></script>
</div>

